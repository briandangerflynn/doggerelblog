<!-- logo -->
<div id="logo_div" class="row">
  <div class="col-md-2">
  </div>

  <div class="col-md-8">
    <%= image_tag "doggerel-blog-logo.png", class: "main_logo" %>
  </div>

  <div class="col-md-2">
  </div>
</div>

<hr>
<!-- logo end -->

<!-- current user dashboard -->
<div id="welcome_main" class="row">

  <div class="col-md-3">
<% if user_signed_in? %>
    <div id="user_dashboard">
      <%= image_tag current_user.photo.url, :class => "dashboard_pic" %>
      <h4><%= link_to current_user.name %></h4>
      <p>Number of posts: <%= current_user.posts.count %></p>
    </div>
<% end %>
  </div>
<!-- current user dashboard end -->

<!-- poems -->
  <div class="col-md-6">
    <% @posts.each do |post| %>

    <article id="welcome_poems">
      <h3><%= post.title %></h3>
      <h4>By: <%= link_to post.user, user_posts_path(post.user) %></h4>
      <p><%= simple_format(post.body) %></p>
    </article>

    <% end %>
  </div>
<!-- poems end -->

<!-- other users -->

  <div class="col-md-3">
  <h4>Poets to Follow:</h4>
    <% @users.each do |user| %>
      <article id="user_list">
        <%= link_to user.name %>

      </article>
    <% end %>

  </div>
<!-- other users end -->
</div>




