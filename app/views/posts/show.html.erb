<div class="container">
  <article id="poem_show">
    <h2><%= @post.title %></h2>

    <h3>by <%= link_to @post.user.name, user_posts_path(@post.user) %></h3>

    <p><%= simple_format(@post.body) %></p>

    <p id="count"><%= pluralize(@post.votes.count, "upvote") %></p>

    <span id="upvote"><%= link_to 'upvote +1', upvote_post_path(@post), method: :post %></span>

    <% if @user.name == current_user.name %>

    <p id="edit_poem"><%= link_to "Edit Poem", edit_post_path %></p>

    <p id="delete_poem"><%= link_to "Delete Poem", @post, method: :delete, data: {confirm: "are you sure?"} %></p>

    <% end %>

  </article>
</div>
